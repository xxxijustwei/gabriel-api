{
    "name": "gabriel-api",
    "private": true,
    "version": "1.0.0",
    "description": "Gabriel API",
    "license": "MIT",
    "scripts": {
        "build": "bun run format && bun run lint && nest build",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "format": "biome format --write --no-errors-on-unmatched",
        "lint": "biome lint --write --no-errors-on-unmatched",
        "prepare": "husky",
        "generate": "drizzle-kit generate",
        "migrate": "drizzle-kit migrate",
        "studio": "drizzle-kit studio"
    },
    "engines": {
        "npm": ">=10.0.0",
        "node": ">=20.0.0"
    },
    "dependencies": {
        "@ai-sdk/xai": "^1.2.13",
        "@nestjs/common": "^11.0.1",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.0.1",
        "@nestjs/platform-express": "^11.0.1",
        "ai": "^4.3.4",
        "axios": "^1.8.4",
        "binance": "^2.15.16",
        "currency.js": "^2.0.4",
        "dayjs": "^1.11.13",
        "dotenv": "^16.4.7",
        "drizzle-orm": "^0.41.0",
        "ml-regression-simple-linear": "^3.0.1",
        "morgan": "^1.10.0",
        "pg": "^8.14.1",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1",
        "sharp": "^0.34.1",
        "simple-statistics": "^7.8.8",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@biomejs/biome": "1.9.4",
        "@eslint/eslintrc": "^3.2.0",
        "@eslint/js": "^9.18.0",
        "@nestjs/cli": "^11.0.0",
        "@nestjs/schematics": "^11.0.0",
        "@nestjs/testing": "^11.0.1",
        "@swc/cli": "^0.6.0",
        "@swc/core": "^1.10.8",
        "@types/express": "^5.0.0",
        "@types/morgan": "^1.9.9",
        "@types/node": "^22.10.7",
        "@types/pg": "^8.11.12",
        "@types/supertest": "^6.0.2",
        "drizzle-kit": "^0.30.6",
        "eslint": "^9.18.0",
        "globals": "^15.14.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^15.5.0",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.7.3"
    },
    "lint-staged": {
        "*.{js,ts,jsx,tsx,json,jsonc}": [
            "biome check --files-ignore-unknown=true ./src",
            "biome check --write --no-errors-on-unmatched ./src",
            "biome check --write --organize-imports-enabled=false --no-errors-on-unmatched ./src",
            "biome check --write --unsafe --no-errors-on-unmatched ./src",
            "biome format --write --no-errors-on-unmatched ./src",
            "biome lint --write --no-errors-on-unmatched ./src"
        ]
    }
}
