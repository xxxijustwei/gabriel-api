{
    "name": "nest-typescript-starter",
    "private": true,
    "version": "1.0.0",
    "description": "Nest TypeScript starter repository",
    "license": "MIT",
    "scripts": {
        "build": "bun run format && bun run lint && nest build",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "format": "biome format --write --no-errors-on-unmatched",
        "lint": "biome lint --write --no-errors-on-unmatched",
        "prepare": "husky"
    },
    "engines": {
        "npm": ">=10.0.0",
        "node": ">=20.0.0"
    },
    "dependencies": {
        "@nestjs/common": "^11.0.1",
        "@nestjs/core": "^11.0.1",
        "@nestjs/platform-express": "^11.0.1",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1"
    },
    "devDependencies": {
        "@biomejs/biome": "1.9.4",
        "@eslint/eslintrc": "^3.2.0",
        "@eslint/js": "^9.18.0",
        "@nestjs/cli": "^11.0.0",
        "@nestjs/schematics": "^11.0.0",
        "@nestjs/testing": "^11.0.1",
        "@swc/cli": "^0.6.0",
        "@swc/core": "^1.10.8",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.10.7",
        "@types/supertest": "^6.0.2",
        "eslint": "^9.18.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-prettier": "^5.2.3",
        "globals": "^15.14.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^15.5.0",
        "prettier": "^3.4.2",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-loader": "^9.5.2",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.20.0"
    },
    "lint-staged": {
        "*.{js,ts,jsx,tsx,json,jsonc}": [
            "biome check --files-ignore-unknown=true ./src",
            "biome check --write --no-errors-on-unmatched ./src",
            "biome check --write --organize-imports-enabled=false --no-errors-on-unmatched ./src",
            "biome check --write --unsafe --no-errors-on-unmatched ./src",
            "biome format --write --no-errors-on-unmatched ./src",
            "biome lint --write --no-errors-on-unmatched ./src"
        ]
    }
}
